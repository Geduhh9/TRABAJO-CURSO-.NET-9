<EditForm Model="Model" OnValidSubmit="Grabar">
    <DataAnnotationsValidator />
    <div class="row mb-4">
        <div class="col-8">
            <label for="nombre" class="form-label">Nombres</label>
            <input type="text" id="nombre" class="form-control" @bind-value="Model.Nombres" />
            <ValidationMessage For="() => Model.Nombres" />
        </div>
        <div class="col-4">
            <label for="nroDocumento" class="form-label">Nro. Documento</label>
            <input type="text" id="nroDocumento" class="form-control" @bind-value="Model.NroDocumento" />
            <ValidationMessage For="() => Model.NroDocumento" />
        </div>
    </div>
    <div class="row mt-2 align-items-end">
        <div class="col-7">
            <div>
                <label for="categoria" class="form-label">Categoria</label>
                <InputSelect id="categoria" class="form-select" @bind-Value="Model.CategoriaSeleccionada">
                    <option>Todos</option>
                    @foreach (var item in Categorias)
                    {
                        <option value="@item.Id">@item.Nombre</option>
                    }
                </InputSelect>
            </div>
        </div>
        <div class="col offset-1">
            <button type="button" class="btn btn-outline-primary" @onclick="Cargar"><i
                    class="bi bi-search me-1"></i>Buscar</button>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary"><i class="bi bi-floppy me-1"></i>Guardar</button>
        </div>

    </div>
    <ValidationSummary />

</EditForm>

<div class="row mt-3">

    <Grid @ref="Grilla" TItem="InstructorDtoResponse" Class="table table-hover table-bordered table-striped"
        AllowSorting="true" Responsive="true" DataProvider="OnReadData" HeaderRowCssClass="table-primary">
        <GridColumn TItem="InstructorDtoResponse" PropertyName="@nameof(InstructorDtoResponse.Id)" HeaderText="#"
            Sortable="true">
            @context.Id
        </GridColumn>
        <GridColumn TItem="InstructorDtoResponse" PropertyName="@nameof(InstructorDtoResponse.NroDocumento)"
            HeaderText="Nro. Documento" Sortable="true">
            @context.NroDocumento
        </GridColumn>
        <GridColumn TItem="InstructorDtoResponse" PropertyName="@nameof(InstructorDtoResponse.Nombres)"
            HeaderText="Nombres" Sortable="true">
            @context.Nombres
        </GridColumn>
        <GridColumn TItem="InstructorDtoResponse" PropertyName="@nameof(InstructorDtoResponse.Categoria)"
            HeaderText="Categoria" Sortable="true">
            @context.Categoria
        </GridColumn>

        <GridColumn TItem="InstructorDtoResponse" HeaderText="Acciones">
            <button type="button" class="btn" @onclick="() => OnEditar(context)">
                <i class="bi bi-pencil-fill"></i>
            </button>
            <button type="button" class="btn" @onclick="() => OnEliminar(context)">
                <i class="bi bi-trash-fill"></i>
            </button>
        </GridColumn>
        <GridColumn TItem="InstructorDtoResponse" HeaderText=" " TextAlignment="Alignment.Center">
            <input type="radio" class="form-switch" name="instructor" id="@context.ForName"
                @onclick="() => { SeleccionaInstructor(context); }" />
        </GridColumn>
    </Grid>
</div>